{
  "name": "1az-language",
  "displayName": "1AZ Language",
  "description": "1AZ Language Support",
  "version": "0.0.1",
  "publisher": "1az",
  "engines": {
      "vscode": "^1.85.0"
  },
  "categories": [
      "Programming Languages",
      "Themes"
  ],

  "main": "./extension.js",
  "contributes": {
      "languages": [{
          "id": "1az",
          "aliases": ["1AZ", "1az"],
          "extensions": [".1az"],
          "configuration": "./language-configuration.json",
          "label": "1AZ Dark",
          "uiTheme": "vs-dark",
          "path": "./1az-color-theme.json"
      }],
      "grammars": [{
          "language": "1az",
          "scopeName": "source.1az",
          "path": "./syntaxes/1az.tmLanguage.json"
      }],
      "themes": [{
          "label": "1AZ Theme",
          "uiTheme": "vs-dark",
          "path": "./themes/1az-color-theme.json"
      }]
  },
  "scripts": {
      "vscode:prepublish": "npm run compile",
      "compile": "tsc -p ./",
      "watch": "tsc -watch -p ./",
      "pretest": "npm run compile && npm run lint",
      "lint": "eslint src --ext ts",
      "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
      "@types/vscode": "^1.85.0",
      "@types/glob": "^8.1.0",
      "@types/mocha": "^10.0.6",
      "@types/node": "25.x",
      "@typescript-eslint/eslint-plugin": "^7.0.0",
      "@typescript-eslint/parser": "^6.13.1",
      "eslint": "^8.54.0",
      "glob": "^13.0.0",
      "mocha": "^11.7.5",
      "typescript": "^5.3.2",
      "@vscode/test-electron": "^2.3.8"
  }
}